{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jest/globals": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },

  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["jest"],
  "ignorePatterns": ["migrations/**"],
  "rules": {
    "no-console": 1,
    "camelcase": "off",
    "import/extensions": "off",
    "lines-between-class-members": "off",
    "no-extra-boolean-cast": "off"
  }
}
